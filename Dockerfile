FROM node:16-alpine

RUN mkdir -p /home/node/app/node_modules && chown -R node:node /home/node/app

WORKDIR /home/node/app

COPY package*.json ./

USER node

RUN npm install

COPY --chown=node:node . .

RUN npm run build

RUN npm run migrate:integration

RUN npm run start

EXPOSE 3000

CMD [ "npm", "run", "start" ]